<h1>New Advertisement</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for ads</p>
        <ul>
            <li>No real products</li>
            <li>Keep it affordable</li>
            <li>Shorthand is encouraged</li>
        </ul>
    </div>

    <div class="col-md-8">
        <%= form_for @ad do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control", placeholder: "Enter ad title" %>
            </div>
            <div class="form-group">
                <%= f.label :copy %>
                <%= f.text_area :copy, class: "form-control", placeholder: "Enter ad copy" %>
            </div>
            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
                <%=  f.submit "Save" %>
            </div>
        <% end %>
    </div>
</div>